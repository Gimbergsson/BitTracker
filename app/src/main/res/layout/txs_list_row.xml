<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="10dp"
        card_view:elevation="10dp"
        card_view:cardElevation="2dp"
        android:layout_margin="3dp"
        android:focusable="true"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txs_hash"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mock_text"/>

            <TextView
                android:id="@+id/txs_relayed_by"
                android:layout_below="@id/txs_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mock_text"/>

            <TextView
                android:id="@+id/txs_block"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txs_hash"
                android:layout_height="wrap_content"
                android:text="mock_text"/>

            <TextView
                android:id="@+id/txs_size"
                android:layout_width="wrap_content"
                android:layout_below="@id/txs_relayed_by"
                android:layout_height="wrap_content"
                android:text="mock_text"/>

            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:id="@+id/txs_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:relative_time_prefix="Completed"
                android:text="mock_text"
                android:layout_below="@id/txs_size"/>

            <TextView
                android:id="@+id/txs_out_value"
                android:layout_width="wrap_content"
                android:layout_below="@id/txs_block"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:text="mock_text"/>

            <TextView
                android:id="@+id/txs_in_value"
                android:layout_width="wrap_content"
                android:layout_below="@id/txs_out_value"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:text="mock_text"/>

            <TextView
                android:id="@+id/txs_fee"
                android:layout_width="wrap_content"
                android:layout_below="@id/txs_in_value"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:text="mock_text"/>

        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>